<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="messageFragment"
            type="prime.projects.user_volley_get_post.fragments.MessageFragment" />

        <!-- Adding the adapter variable -->
        <variable
            name="hotAdapter"
            type="prime.projects.user_volley_get_post.adapter.HotlineAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MessageFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/result_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            tools:itemCount="3"
            tools:listitem="@layout/volley_item_row"
            android:adapter="@{hotAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="278dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_back_txt"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:onClick="@{()-> messageFragment.goBack()}"
            android:background="@drawable/volley_btn_shape"
            android:textColor="#FFBE73"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="397dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>